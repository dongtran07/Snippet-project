<%provide(:title,"Edit snippet")%>
<h1>Update your snippet</h1>

<div class="row">
  <div class="span8">
    <%= form_for(@snippet) do |f|%>
    <%= render 'shared/errors_message' %>
    <%= f.label :poster%>
    <%= f.text_field :poster, class: 'fixinput'%>

    <%= f.label :syntax%>
    <% syntaxes_array = Syntax.all.map { |syntax| [syntax.name, syntax.id] } %>
    <%= f.select :syntax_id,syntaxes_array%>

    <%= f.label :content%>
    <%= f.text_area :content%>
    <div>
        <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-danger">
          <%= f.check_box :private%>Private
        </label>
        </div>
    </div>
    <br/>
    <%= f.submit "Update", class:"btn btn-normal btn-primary"%>
    <% end %>
  </div>
</div>