<%provide(:title,"The snippet")%>
<% if @snippet.private && !current_user?(@snippet.user)%>
	<div class='alert alert-errors'>You are not allowed see this snippet</div>
<% else %>
  <div class="panel-heading"><h1><%= @snippet.poster%></h1></div>
  <pre><code class="<%= @snippet.syntax.name.downcase %>"><%= @snippet.content %></pre></code>
  <% if current_user?(@snippet.user) && current_user%>
    <%= link_to "Edit Snippet", edit_snippet_path(@snippet)%> |
    <%= link_to "Delete", @snippet, method: :delete,
	                                  data: { confirm: "You sure?" } %>
  <% end %>
<%end%>